<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">


    <TextView
        android:id="@+id/text_sender_name"
        android:text="Personal Assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginRight="4dp"/>
    <TextView
        android:layout_below="@+id/text_sender_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/text_message_body"
        android:text="hello, hello!"
        android:background="@drawable/rounded_rectangle_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginRight="8dp" />


    <TextView
        android:layout_toRightOf="@+id/text_message_body"
        android:id="@+id/text_message_time"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_above="@id/something"
        android:layout_marginRight="4dp"/>

    <TextView
        android:visibility="invisible"
        android:layout_below="@+id/text_message_body"
        android:id="@+id/something"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"/>

</RelativeLayout>
